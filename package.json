{
  "name": "unoapi",
  "version": "1.0.0",
  "private": true,
  "description": "前端API自动化编码工具",
  "scripts": {
    "preinstall": "node ./scripts/check.js",
    "postinstall": "node ./scripts/check.js",
    "build:core": "pnpm --filter @unoapi/core build",
    "build:cli": "pnpm --filter @unoapi/cli build",
    "build:vscode": "pnpm --filter unoapi-vscode-extension build",
    "build": "rimraf packages/*/dist -g && pnpm -r build",
    "dev:web": "pnpm --filter website dev",
    "build:web": "pnpm --filter website build",
    "local:changeset": "pnpm changeset",
    "local:version": "pnpm changeset version",
    "local:publish": "pnpm changeset publish --no-git-checks",
    "ci:publish": "pnpm build:core && pnpm build:cli && pnpm changeset publish",
    "vscode:publish": "pnpm build:core && pnpm build:vscode && pnpm --filter unoapi-vscode-extension publish:marketplace"
  },
  "keywords": [],
  "author": "moohng@前端星河",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@types/node": "24.3.1",
    "@unoapi/core": "workspace:*",
    "esbuild": "^0.25.11",
    "rimraf": "6.0.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.20.0"
}