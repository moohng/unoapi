{
  "name": "@unoapi/vscode",
  "displayName": "UnoAPI VSCode",
  "publisher": "unoapi",
  "version": "0.0.2",
  "description": "自动生成前端 API 代码",
  "main": "./dist/extension.js",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "openapi",
    "api",
    "codegen",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moohng/unoapi.git",
    "directory": "packages/vscode-extension"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "unoapi.generateApi",
        "title": "[code] 生成 API 代码",
        "category": "UnoAPI"
      },
      {
        "command": "unoapi.initConfig",
        "title": "[init] 生成配置文件",
        "category": "UnoAPI"
      },
      {
        "command": "unoapi.downloadDocument",
        "title": "[download] 下载 OpenAPI 文档",
        "category": "UnoAPI"
      },
      {
        "command": "unoapi.generateModel",
        "title": "[model] 生成 Model 代码",
        "category": "UnoAPI"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "unoapi.generateApi",
          "when": "resourceExtname == .ts",
          "group": "unoapi"
        },
        {
          "command": "unoapi.generateApi",
          "when": "explorerResourceIsFolder",
          "group": "unoapi"
        },
        {
          "command": "unoapi.generateModel",
          "when": "resourceExtname == .ts",
          "group": "unoapi"
        },
        {
          "command": "unoapi.generateModel",
          "when": "explorerResourceIsFolder",
          "group": "unoapi"
        }
      ],
      "editor/context": [
        {
          "command": "unoapi.generateApi",
          "when": "resourceExtname == .ts",
          "group": "unoapi"
        }
      ]
    }
  },
  "scripts": {
    "dev": "esbuild src/extension.ts --bundle --platform=node --format=cjs --outfile=dist/extension.js --external:vscode --sourcemap --watch",
    "build": "esbuild src/extension.ts --bundle --platform=node --format=cjs --outfile=dist/extension.js --external:vscode --external:esbuild",
    "package": "vsce package --no-dependencies",
    "publish:marketplace": "vsce publish --no-dependencies -p $VSCE_PAT"
  },
  "dependencies": {
    "@unoapi/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "24.3.1",
    "@types/vscode": "1.106.1"
  }
}